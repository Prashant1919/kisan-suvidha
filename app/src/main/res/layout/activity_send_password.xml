<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SendPasswordActivity">


    <ImageView
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/confirmation"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/wehave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent instructions to:"
        android:textSize="16sp"
        android:letterSpacing="0.04"
        android:fontFamily="@font/publicaplay"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/notification"
        android:layout_marginTop="36dp"/>

    <TextView
        android:id="@+id/userEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@gmail.com"
        android:textSize="17sp"
        android:layout_marginTop="4dp"
        android:letterSpacing="0.04"
        android:fontFamily="@font/publicaplay_bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wehave"/>

    <Button
        android:id="@+id/btn_back_to_login"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmailId"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_login_riple"
        android:fontFamily="@font/publicaplay"
        android:includeFontPadding="false"
        android:letterSpacing="0.08"
        android:text="Back to Log In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/try_another"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tryanotherEmail"
        android:text="@string/tryanother"
        android:textSize="14sp"
        android:letterSpacing="0.05"
        android:fontFamily="@font/publicaplay_bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haventâ€™s received an email? check your spam filter or Copy"
        android:textSize="13sp"
        android:letterSpacing="0.06"
        android:fontFamily="@font/publicaplay"
        android:textColor="@color/grey_800"
        android:gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:textAlignment="center"
        android:layout_above="@id/try_another"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>